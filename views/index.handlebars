<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">Eat da burger!</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="devour" data-id="{{this.id}}" data-devoured="{{devoured}}">
            Devour it!
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center">Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger name:</label>
          <input type="text" id="burger" name="burger_name">
        </div>

        <button type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>