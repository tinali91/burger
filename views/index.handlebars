<h1>BURGERS ARE THE BEST</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{burger_name}}
        <button class="devour" data-id="{{this.id}}" data-devoured="{{devoured}}">
          Devour it!
        </button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  <button type="submit">Submit</button>
</form>
